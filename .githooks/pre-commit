#!/bin/bash
# Pre-commit hooks for identity shaping projects
#
# Setup: git config core.hooksPath .githooks

# === Large file check ===
"$(dirname "$0")/check-large-files"
if [ $? -ne 0 ]; then
    exit 1
fi

# === Run beads pre-commit hook ===
if command -v bd >/dev/null 2>&1; then
    bd hooks run pre-commit "$@"
fi
